<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePerson"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePerson"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imagePerson"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textMajor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imagePerson"
        android:text="Major"
        android:textSize="18sp"
        android:paddingBottom="25dp"/>

    <ImageView
        android:id="@+id/imageRating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginStart="330dp"/>

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageRating"
        android:layout_alignTop="@id/imageRating"
        android:layout_alignRight="@id/imageRating"
        android:layout_alignBottom="@id/imageRating"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="4.5"
        android:textColor="#ffffff" />

</RelativeLayout>